{
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dist/**/*"
	],
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"moduleResolution": "node",

		"rootDir": "src",
		"sourceMap": true,
		"target": "es6",
        "lib": ["es2016"],
		"types": [
			"node"
		]
    }
}