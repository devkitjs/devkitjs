{
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dist/**/*"
	],
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "src",
		"sourceMap": true,
		"target": "es6",
        "lib": ["es2016"],
        "traceResolution": true,    
		"types": [
			"node"
        ]
    }
}